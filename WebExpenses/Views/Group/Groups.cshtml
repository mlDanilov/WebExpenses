@using DomainExpenses.Abstract
@using WebExpenses.Models.Group
@model MGroupList

@Html.ActionLink("Expenses", "GroupsAndItems");

@for (int i = 0; i < Model.GroupList.Count; i++)
{
    <div class="group">
        @Html.ActionLink(
    $"{i + 1}. {Model.GroupList[i].Id} - {Model.GroupList[i].Name}",
    "GroupsAndItems", new { gId_ = Model.GroupList[i].Id },
        new
        {
            @class = (Model.GroupList[i].Id == Model.GroupId) ? "selected" : null
        }
    )
    </div>
}
