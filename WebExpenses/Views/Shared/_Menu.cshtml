<body>
    <div id="root">
        <div id="menu">
            <div id="groupsAndItems">
                @Html.ActionLink("Группы и товары", "List", "Group")
            </div>
            <div id="shops">
                @Html.ActionLink("Магазины", "List", "Shop")
            </div>
            <div id="purchase">
                @Html.ActionLink("Покупки", "List", "Purchase")
            </div>
        </div>
        @RenderBody()
    </div>
</body>
</html>
