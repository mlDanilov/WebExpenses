@using DomainExpenses.Abstract
@using WebExpenses.Models.Item.Interfaces

@model IMItemList

<table id="itemsTable">
    <thead>
        <tr>
            <th></th>
            <th>Код</th>
            <th>Товар</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody id="itemsTableBody">
        <tr ng-repeat="item in Items.getItems()">
            <th class="itemOrder">{{$index+1}}.</th>
            <th class="itemId">{{item.Id}}</th>
            <th class="itemName">{{item.Name}}</th>
            <th class="itemEdit">
                <input type="button" value="Редактировать" ng-click="EditItem(item)" />
            </th>
            <th class="itemDelete">
                <input type="button" value="Удалить" ng-click="DeleteItem(item)" />
            </th>

        </tr>

    </tbody>
    <tfoot>
        <tr>
            <th></th>
            <th></th>
            <!--
            <th>Html.ActionLink("Добавить", "CreateItemCard", new { gId_ = Model.GroupId })</th>
            -->
            <th><input type="button"  value="Добавить" ng-click="CreateNewItem()"/></th>
            <th></th>
            <th></th>
        </tr>
    </tfoot>
    
   
</table>



