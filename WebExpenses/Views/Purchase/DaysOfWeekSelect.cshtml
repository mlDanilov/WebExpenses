@using System.Globalization

@model IEnumerable<DateTime>
@{
    CultureInfo cInfo = new CultureInfo("ru-RU");
}
<select id="daysOfWeek" name="daysOfWeek" onchange="dayOfWeekSelect()">
    <option value="0">-</option>
   
    @foreach (DateTime date in @Model)
    {
        <option value=@date.DayOfWeek>@cInfo.DateTimeFormat.GetAbbreviatedDayName(date.DayOfWeek) - @date.ToShortDateString()</option>
    } 
    <!--option value="2">ПН</!--option>
    <option value="3">ВТ</option>
    <option value="4">СР</option>
    <option value="5">ЧТ</option>
    <option value="6">ПТ</option>
    <option value="7">CБ</option>
    <option value="1">ВС</option-->
</select>
