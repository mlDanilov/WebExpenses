@using WebExpenses.Models.Purchase;

@model List<MPurchase>

    <tr id="@("purchDetail"+ViewData["PurchGId"])" class="detailHeader_visible">
        <th></th>
        <th></th>
        <th>Товар</th>
        <th>Сумма</th>
        <th>Цена</th>
        <th>Кол-во</th>
        <th>Магазин</th>
        <th>Дата</th>
    </tr>

    @for (int i = 0; i < Model.Count; i++)
    {
        <tr id="@("purchDetail"+ViewData["PurchGId"])" class="@("detail_visible"+((i % 2) +1))">
            <th class="purchOrder">@(i + 1)</th>
            <th class="purchId">@Model[i].Id</th>
            <th class="purchItemId">@Model[i].Item_Id - @Model[i].ItemName</th>
            <th class="purchSum">@((Model[i].Price * Model[i].Count).ToString("### ##0.00").TrimStart(' '))</th>
            <th class="purchPrice">@Model[i].Price.ToString("### ##0.00").TrimStart(' ')</th>
            <th class="purchCount">@Model[i].Count</th>
            <th class="purchShopName">@Model[i].ShopName - @Model[i].ShopAddress</th>
            <th class="purchDate">@Model[i].Date.ToShortDateString()</th>
            <th class="purchEdit">@Html.ActionLink("Редактировать", "EditPurchase", new { purchaseId_ = Model[i].Id })</th>
            <th class="purchDelete" >@Html.ActionLink("Удалить", "DeletePurchase")</th>
        </tr>
    }



