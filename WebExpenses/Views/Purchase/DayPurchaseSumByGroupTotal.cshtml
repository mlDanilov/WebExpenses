@using WebExpenses.Models.Purchase;

@model List<MDayPurchaseSumByGroup>


@for (int i = 0; i < @Model.Count; i++)
{
    <tr>
        <th class="wPurchGroupOrder">
            @(i + 1).
        </th>
        <th class="wPurchGroupId">
            @Model[i].Group.Id
        </th>
        <th class="wPurchGroupName">
            @Model[i].Group.Name
        </th>
        <th class="wPurchGroupSum">
            @Model[i].Sum.ToString("### ##0.00").TrimStart(' ')
        </th>
        <th>
            @Html.ActionLink("Подробнее", "InnerPurchases")
        </th>
    </tr>

}
