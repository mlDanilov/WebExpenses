@model WebExpenses.Models.Purchase.MPurchase

@{
    ViewBag.Title = "PurchaseCard";
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>
</head>
<body>
    <h2>Карточка покупки</h2>
    @using (Html.BeginForm())
    {
        if (Model.Id != -1)
        {
            <p>Код  покупки: @Html.TextBoxFor(p => p.Id, new { @readonly = true })</p>
        }
        <p>
            Магазин:
            @{
                Html.RenderAction("ShopDropDownList", "Shop", new { shopId_  = Model.Shop_Id });
            }
        </p>
        <p>Цена: @Html.EditorFor(p => p.Price)</p>
        <p>Количество: @Html.EditorFor(p => p.Count)</p>
        <p>Дата: @Html.EditorFor(p => p.Date)</p>
        <input type="submit" value="@ViewData["Head"]"/>
    }
</body>
</html>
