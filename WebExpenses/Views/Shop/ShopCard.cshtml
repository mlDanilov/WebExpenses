@model WebExpenses.Models.Shop.Interfaces.IMShopCard
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>
    @Styles.Render("~/Content/shopCard")
    @Scripts.Render("~/bundles/jQuery")
    @Scripts.Render("~/bundles/validate")
</head>
<body>
    <h4>Карточка магазина</h4>
    @using (Html.BeginForm())
    {
        //@Html.ValidationSummary();
        if (Model.Id != -1)
        {
            <p>Код магазина: @Html.TextBoxFor(sh => sh.Id, new { @readonly = true })</p>
        }
        <p>Наименование: @Html.EditorFor(sh => sh.Name)</p>
        <p>@Html.ValidationMessageFor(sh => sh.Name)</p>
        <p>Адрес: @Html.EditorFor(sh => sh.Address)</p>
        <p>@Html.ValidationMessageFor(sh => sh.Address)</p>
        <input type="submit" value="@ViewData["Head"]" />
    }
</body>
</html>
