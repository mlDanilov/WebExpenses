@using DomainExpenses.Abstract
@using WebExpenses.Models.Item.Interfaces
@using Newtonsoft.Json;
@model WebExpenses.Models.Shop.Interfaces.IMShopCard
@{
    //Layout = null;
    Layout = "~/Views/Shared/_AngularJsShopLayout.cshtml";
}

<div ng-controller="shopController" 
     data-ng-init="init(@Newtonsoft.Json.JsonConvert.SerializeObject(Model))">
    <h4>Редактировать магазин</h4>
    <p>Код магазина: <input  ng-model="Id" value="@Model.Id"  readonly/></p>
    <p>Наименование: <input ng-model="Name" value="@Model.Name" /></p>
    <p>Адрес: <input ng-model="Address" value="@Model.Address" /></p>
    <input type="button" value="Редактировать" ng-click="EditShop()" />
</div>